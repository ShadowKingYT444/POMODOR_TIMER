{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Break-Manager",
  "version": "0.1.0",
  "identifier": "com.terry.break-manager",
  "build": {
    "frontendDist": "../dist" 
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "BREAK MANAGEr",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
